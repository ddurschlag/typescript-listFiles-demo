{
    "compilerOptions": {
        "target": "es2017",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "allowJs": true,
        "checkJs": true,
        "maxNodeModuleJsDepth": 1,
        "isolatedModules": true,
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true
    },
    "include": [
        "src/**/*"
    ]
}
